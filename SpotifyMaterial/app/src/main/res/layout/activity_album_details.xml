<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gomez.jeanpi.spotifymaterial.views.AlbumDetails">

    <ImageView
        android:id="@+id/album_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="25dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="31dp" />

    <Button
        android:id="@+id/open_external_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/open_spotify_link"
        android:layout_toRightOf="@+id/album_image"
        app:layout_constraintLeft_toRightOf="@+id/album_image"
        app:layout_constraintTop_toTopOf="@+id/album_image"
        android:layout_marginStart="30dp" />

</android.support.constraint.ConstraintLayout>
