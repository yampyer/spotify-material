<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.gomez.jeanpi.spotifymaterial.views.SearchArtistFragment"
    tools:showIn="@layout/activity_search_artist">

    <ImageView
        android:id="@+id/artist_image"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="25dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="31dp" />

    <TextView
        android:id="@+id/artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@+id/artist_image"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintLeft_toRightOf="@+id/artist_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="50dp" />

    <TextView
        android:id="@+id/artist_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/artist_name"
        android:layout_below="@+id/artist_name"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintLeft_toRightOf="@+id/artist_image"
        app:layout_constraintTop_toBottomOf="@+id/artist_name"
        android:layout_marginStart="50dp" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/artist_name"
        android:layout_below="@+id/artist_followers"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:text="@string/popularity"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintLeft_toRightOf="@+id/artist_image"
        app:layout_constraintTop_toBottomOf="@+id/artist_followers"
        android:layout_marginStart="50dp" />

    <ProgressBar
        android:id="@+id/artist_popularity"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="102dp"
        android:layout_height="23dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/artist_followers"
        app:layout_constraintLeft_toRightOf="@+id/textview2" />

    <TextView
        android:id="@+id/textview5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/artist_image"
        android:text="@string/albums"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginStart="50dp"
        app:layout_constraintHorizontal_bias="0.418" />

    <!--<android.support.v7.widget.RecyclerView-->
